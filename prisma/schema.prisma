generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OWNER
  CASHIER
  MAINTAINER
}

enum isActive {
  true
  false
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  

  role      Role
  is_active isActive @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}
